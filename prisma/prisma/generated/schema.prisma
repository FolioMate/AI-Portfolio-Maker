// schema.prisma

generator client {
  provider = "prisma-client-js"
  output   = "./prisma/generated" // Or any other directory you prefer
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // The environment variable for your database URL
}

model User {
  id         Int         @id @default(autoincrement())
  name       String
  email      String      @unique
  password   String
  image      String?
  portfolios Portfolio[] // One-to-many relation with Portfolio
}

model Portfolio {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  name        String
  title       String
  skills      String
  projects    String
  github      String
  linkedin    String
  template    String
  content     String
  bio         String
  socialLinks String
  userId      Int
  user        User     @relation(fields: [userId], references: [id]) // ðŸ‘‰ ADD THIS LINE
}
